<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <script src="assets/js/jquery-3.3.1.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/fontAwesone.min.js"></script>
    <title>Document</title>
    <style>
        body {
            background: #f8f9fa;
            font-size: 16px;
            font-family: "Open Sans", sans-serif;
        }

        .barra-lateral {
            /* background: #f8f9fa; */
            background: #074F7B;
            color: black;
            min-width: 100px;
            min-height: 100vh;
            padding: 0;
        }

        -barra-lateral a {
            color: white;
        }

        .barra-lateral .logo {
            background: #074F7B;
            ;
            margin-bottom: 2px;
        }

        .barra-lateral .logo h2 {
            font-family: Arial, Helvetica, sans-serif;
            padding: 20px 0;
            text-align: center;
            font-weight: 300;
            margin: 0px;
            color: white;
        }

        .barra-lateral .menu a {
            display: block;
            padding: 20px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: 200px;
            border-bottom: 1px solid rgba(255, 155, 255, .1);
            color: white;
        }

        .barra-lateral .menu a:hover {
            text-decoration: none;
            background: white;
            color: black;
        }

        #barraSuperior {
            margin-left: -13px;
        }

        @media screen and (max-width:1300px) {
            .barra-lateral {
                min-width: auto;
            }
            .barra-lateral .logo {
                display: none;
            }
            .barra-lateral .menu a span {
                display: none;
            }
        }

        @media screen and (max-width:575px) {
            .barra-lateral {
                min-height: auto;
            }
        }

        nav {
            background: #074F7B;
        }

        .favorito {
            color: yellow;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class=" barra-lateral col-sm-auto">
                <div class="logo text-center pt-3">
                    <a href="/dashboard">
                        <img src="assets/img/git-scm-icon.svg" height="40" width="40" alt="">
                        <input type="hidden" name="" id="archivoCompartido">
                    </a>
                </div>
                <nav class="menu d-flex d-sm-block  justify-content-center flex-wrap barra-lateral">
                    <a id="unidad" title="Mi Unidad" class="pr-1">
                        <i class="fas fa-laptop"></i>
                        <span>Mi Unidad</span>
                    </a>
                    <a class="" id="irCompartidos" title="compartidos Conmigo">
                        <i class="far fa-handshake"></i>
                        <span>Compartidos Conmigo</span>
                    </a>
                    <a id="favoritos" title="Favoritos" class="">
                        <i class="far fa-star"></i>
                        <span>Favoritos</span>
                    </a>
                    <a href="#" title="Recientes" class="">
                        <i class="far fa-edit"></i>
                        <span>Recientes</span>
                    </a>
                    <a href="/editor" title="Editor" class="">
                        <i class="far fa-sticky-note"></i>
                        <span>Editor</span>
                    </a>
                    <a id="papelera" title="Papelera" class="">
                        <i class="far fa-sticky-note"></i>
                        <span>Papelera</span>
                    </a>
                    <button class="navbar-toggler d-block d-md-none" type="button" data-toggle="collapse" data-target="#navbarPrincipal" aria-controls="navbarPrincipal"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span>
                            <i class="fas fa-bars text-white d-block d-md-none"></i>
                        </span>
                    </button>
                </nav>
            </div>
            <main class="col">
                <nav class="row navbar navbar-expand-md navbar-light">
                    <div class="collapse navbar-collapse" id="navbarPrincipal">
                        <div class="col-lg-8">
                            <div class="input-group">
                                <input type="search" class="form-control" id="buscar" placeholder="Buscar">
                                <div class="input-group-append">
                                    <button class="btn btn-light" style="border: none;">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 text-right">
                            <a href="/logout" class="btn btn-outline-primary">
                                Salir
                            </a>
                        </div>
                    </div>
                </nav>
                <div class="row mt-5" id="archivos">
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="usuariosCompartir">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Nombre</th>
                                            <th scope="col">Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody id="usuarios">
                                    </tbody>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="assets/js/controladorDashboard.js"></script>
    <script>
        $('#exampleModal').modal('handleUpdate')
    </script>
</body>

</html>